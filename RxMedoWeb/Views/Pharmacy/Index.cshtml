@{
    ViewData["Title"] = "Pharmacy Services";
}

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Quicksand:wght@400;500;600;700&display=swap" rel="stylesheet">

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<!-- Custom CSS -->
<link rel="stylesheet" href="~/css/pharmacy.css" />

<!-- Hero Section -->
<div class="pharmacy-hero text-white py-5">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-6 col-md-6 text-md-start text-center d-flex flex-column justify-content-center">
                <h1 class="hero-title animate__animated animate__fadeInDown">Pharmacy Services <br><span class="text-accent">Save Up to 20%</span></h1>
                <p class="hero-subtitle animate__animated animate__fadeInUp">Unlock exclusive savings on essential medications with our discount card. Enjoy doorstep delivery and expert pharmaceutical care.</p>
                <div class="mt-4 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                    <a href="#benefits" class="btn btn-accent me-3">VIEW BENEFITS</a>
                    <a href="/offers" class="btn btn-outline-light">GET DISCOUNT CARD</a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 text-center animate__animated animate__fadeInRight">
                <div class="hero-image-container">
                    <img src="~/images/pharmacy-bg.png" alt="Pharmacy Services" class="img-fluid hero-image">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Benefits Section -->
<div class="benefits-section" id="benefits">
    <div class="container">
        <h2 class="section-title animate__animated animate__fadeIn">Save on Healthcare</h2>
        <p class="section-subtitle animate__animated animate__fadeIn">With our medical discount card, patients can enjoy significant savings on various healthcare expenses</p>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
                <div class="benefit-card">
                    <img src="~/images/pharmacy-1.png" alt="Healthcare Savings" class="benefit-icon">
                    <h3 class="benefit-title">30% Off Diagnostics</h3>
                    <p class="benefit-description">Enjoy a 30% discount on diagnostic tests, ensuring affordability for essential medical investigations.</p>
                    <a href="#" class="btn btn-primary">LEARN MORE</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                <div class="benefit-card">
                    <img src="~/images/pharmacy-2.png" alt="Healthcare Savings" class="benefit-icon">
                    <h3 class="benefit-title">30% Off Consultations</h3>
                    <p class="benefit-description">Get a 30% discount on consultation fees, making expert medical advice more accessible for everyone.</p>
                    <a href="#" class="btn btn-primary">LEARN MORE</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
                <div class="benefit-card">
                    <img src="~/images/pharmacy-3.png" alt="Healthcare Savings" class="benefit-icon">
                    <h3 class="benefit-title">20% Off Medicines</h3>
                    <p class="benefit-description">Save 20% on the purchase of medicines, helping to alleviate financial burdens for ongoing treatments.</p>
                    <a href="#" class="btn btn-primary">LEARN MORE</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Discount Section -->
<div class="discount-section">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-6 animate__animated animate__fadeInLeft">
                <div class="discount-card">
                    <div class="discount-percentage">30% OFF</div>
                    <img src="https://rxmedocard.com/assets/img/12.png" alt="Healthcare for Everyone" class="discount-image">
                    <h3 class="discount-title">Healthcare Saving for Everyone</h3>
                    <p class="discount-description">With our medical discount card, individuals of all ages can benefit from significant savings on healthcare costs. Elderly individuals, who often require frequent medical check-ups and medications, can particularly benefit from the 30% discount on diagnostic tests and consultations.</p>
                    <a href="/offers" class="btn btn-primary">GET YOUR CARD</a>
                </div>
            </div>

            <div class="col-lg-6 animate__animated animate__fadeInRight">
                <div class="discount-card">
                    <div class="discount-percentage">20% OFF</div>
                    <img src="https://rxmedocard.com/assets/img/Diabetes-1.png" alt="Diabetic Care" class="discount-image">
                    <h3 class="discount-title">Affordable Healthcare for Diabetic Patients</h3>
                    <p class="discount-description">Diabetic patients, who require regular monitoring and medication, can take advantage of the 20% discount on medicines. This helps reduce the overall cost of managing their condition and improves medication adherence.</p>
                    <a href="#" class="btn btn-primary">LEARN MORE</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
