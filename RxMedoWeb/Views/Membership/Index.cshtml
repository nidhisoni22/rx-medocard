@model RxMedoWeb.Models.Membership
@{
    ViewData["Title"] = "Membership";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<section class="membership-page">
    <!-- Hero Section -->
    <section class="membership-hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1 class="hero-title">RX MEDO CARD Membership</h1>
                        <p class="hero-subtitle">Join our premium healthcare membership program and enjoy exclusive benefits, discounts, and priority access to quality healthcare services across India.</p>
                        <div class="hero-buttons mt-4">
                            <a asp-controller="Offers" asp-action="Index" class="btn btn-primary btn-lg me-3">View Current Offers</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image-container">
                        <img src="~/images/membership.png" class="hero-image" alt="RX MEDO CARD Membership">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Membership Card Section -->
    <section class="membership-card-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Your Premium Healthcare Card</h2>
                <div class="title-underline"></div>
                <p class="section-subtitle">Experience the convenience and benefits of the RX MEDO CARD - your gateway to affordable healthcare</p>
            </div>

            <div class="card-container">
                <div class="logo-section">
                    <img src="~/images/logo.png" alt="RX MEDO CARD Logo" />
                </div>
                <div class="info-section">
                    <div class="info-header">
                        <h1>RX MEDO CARD</h1>
                        <small>An Initiative of RX Medical Trust</small>
                        <div class="tagline">Where Health Meets Savings</div>
                    </div>

                    <div class="info-fields">
                        <div><i class="fas fa-user"></i> Name: <strong>&nbsp;[John Doe]</strong></div>
                        <div><i class="fas fa-id-card"></i> Card Type: <strong>&nbsp;MedoInsure</strong></div>
                        <div><i class="fas fa-hashtag"></i> Serial Number: <strong>&nbsp;1234567890</strong></div>
                        <div><i class="fas fa-file-medical"></i> Policy Number: <strong>&nbsp;RX-098765</strong></div>
                    </div>

                    <div class="footer">
                        üåê For More Details: <a href="https://www.rxmedocard.com" target="_blank">www.rxmedocard.com</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="benefits-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Membership Benefits</h2>
                <div class="title-underline"></div>
                <p class="section-subtitle">Discover the advantages of becoming a RX MEDO CARD member</p>
            </div>

            <div class="row">
                <!-- Benefit 1 -->
                <div class="col-lg-3 col-md-6">
                    <div class="benefit-card">
                        <div class="benefit-icon">
                            <i class="bi bi-cash-coin"></i>
                        </div>
                        <h3 class="benefit-title">Save on Medical Costs</h3>
                        <p class="benefit-description">Enjoy significant discounts on consultations, diagnostics, and other medical services.</p>
                    </div>
                </div>

                <!-- Benefit 2 -->
                <div class="col-lg-3 col-md-6">
                    <div class="benefit-card">
                        <div class="benefit-icon">
                            <i class="bi bi-hospital"></i>
                        </div>
                        <h3 class="benefit-title">Network Hospitals</h3>
                        <p class="benefit-description">Access our extensive network of quality hospitals and healthcare facilities across India.</p>
                    </div>
                </div>

                <!-- Benefit 3 -->
                <div class="col-lg-3 col-md-6">
                    <div class="benefit-card">
                        <div class="benefit-icon">
                            <i class="bi bi-clock"></i>
                        </div>
                        <h3 class="benefit-title">Priority Access</h3>
                        <p class="benefit-description">Enjoy priority appointments and reduced waiting times at partner healthcare facilities.</p>
                    </div>
                </div>

                <!-- Benefit 4 -->
                <div class="col-lg-3 col-md-6">
                    <div class="benefit-card">
                        <div class="benefit-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h3 class="benefit-title">Family Protection</h3>
                        <p class="benefit-description">Extend the benefits to your family members and ensure their healthcare needs are covered.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Application Form -->
    <section id="application-section" class="application-section">
        <div class="container">
            <div class="application-container">
                <div class="application-header">
                    <h2 class="application-title">Apply for Membership</h2>
                    <p class="application-subtitle">Fill out the form below to join our membership program and start enjoying the benefits</p>
                </div>
                <div class="application-content">
                    <form asp-controller="Membership" asp-action="Apply" method="post" class="needs-validation application-form" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="FullName" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="FullName" name="FullName" required>
                                <div class="invalid-feedback">
                                    Please provide your full name.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="Email" name="Email" required>
                                <div class="invalid-feedback">
                                    Please provide a valid email address.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="Phone" name="Phone" required>
                                <div class="invalid-feedback">
                                    Please provide a valid phone number.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="DateOfBirth" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" required>
                                <div class="invalid-feedback">
                                    Please provide your date of birth.
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="Address" class="form-label">Address</label>
                            <textarea class="form-control" id="Address" name="Address" rows="3" required></textarea>
                            <div class="invalid-feedback">
                                Please provide your address.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="MembershipType" class="form-label">Membership Type</label>
                            <select class="form-select" id="MembershipType" name="MembershipType" required>
                                <option selected disabled value="">Choose...</option>
                                <option value="Basic">Basic</option>
                                <option value="Standard">Standard</option>
                                <option value="Premium">Premium</option>
                                <option value="Family">Family</option>
                                <option value="Senior">Senior Citizen</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a membership type.
                            </div>
                        </div>
                        <button type="submit" class="btn-apply-now">Apply Now <i class="bi bi-arrow-right"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</section>
