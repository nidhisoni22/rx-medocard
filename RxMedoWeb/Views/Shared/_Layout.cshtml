<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RxMedical Trust</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RxMedoWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="RxMedical Trust Logo" height="50">
                    RxMedical Trust
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Offers" asp-action="Index">Offers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Hospitals" asp-action="Index">Hospitals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="OPD" asp-action="Index">OPD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pharmacy" asp-action="Index">Pharmacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Diagnostics" asp-action="Index">Diagnostics</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary ms-2" asp-area="" asp-controller="Membership" asp-action="Index">Get Started</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white pt-5 pb-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <h5>RxMedical Trust</h5>
                    <p>Crossing Republic<br>Ghazibad, 201016</p>
                    <p><strong>Phone:</strong> +919999307517<br>
                    <strong>Email:</strong> RxMedicalTrust@gmail.com</p>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Useful Links</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-white" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="text-white" asp-controller="Offers" asp-action="Index">Offers</a></li>
                        <li><a class="text-white" asp-controller="Hospitals" asp-action="Index">Hospitals</a></li>
                        <li><a class="text-white" asp-controller="OPD" asp-action="Index">OPD</a></li>
                        <li><a class="text-white" asp-controller="Pharmacy" asp-action="Index">Pharmacy</a></li>
                        <li><a class="text-white" asp-controller="Diagnostics" asp-action="Index">Diagnostics</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Department</h5>
                    <div class="row">
                        <div class="col-6">
                            <ul class="list-unstyled">
                                <li><a class="text-white" href="#">Anesthesiology</a></li>
                                <li><a class="text-white" href="#">Cardiology</a></li>
                                <li><a class="text-white" href="#">Dentistry</a></li>
                                <li><a class="text-white" href="#">Dermatology</a></li>
                                <li><a class="text-white" href="#">Dieteics</a></li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <ul class="list-unstyled">
                                <li><a class="text-white" href="#">Endocrinology</a></li>
                                <li><a class="text-white" href="#">ENT</a></li>
                                <li><a class="text-white" href="#">Internal Medicine</a></li>
                                <li><a class="text-white" href="#">General Surgery</a></li>
                                <li><a class="text-white" href="#">Nephrology</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Our Services</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-white" href="#">Ambulance Service</a></li>
                        <li><a class="text-white" href="#">Daycare Center</a></li>
                    </ul>
                </div>
            </div>
            <hr class="mt-4">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; @DateTime.Now.Year - RxMedical Trust - All Rights Reserved</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>Designed by <a class="text-white" href="https://e2vllp.com/" target="_blank">Employment Express</a></p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
