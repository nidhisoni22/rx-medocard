<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RX MEDO CARD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/service-cards-clean.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/service-section-bg.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/services-animation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hospitals-section.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hospitals-section-v2.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stethoscope-right.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hospitals-section-expanded.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stethoscope-bg.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hero-v2.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hero-fix.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hero-enhanced.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hero-redesign.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hero-text-colors.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/medicare-inspired.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/vertical-lines.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/annual-plans-animation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/plans-section-redesign.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/plans-section-service-bg.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/vision-section.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/trust-cards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/trust-programs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about-section.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about-section-redesign.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/enhanced-cards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/hospital-cards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/diagnostics.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/membership.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/offers.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/opd.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pharmacy.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar-unified.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar-special-fix.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/get-started-btn.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RxMedoWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />

    <!-- All navbar styles are now in navbar-unified.css -->
</head>

<body>
    <header class="header-modern">
        <nav class="navbar navbar-expand-custom navbar-light navbar-modern">
            <div class="container position-relative d-flex justify-content-start align-items-center">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <div class="logo-with-icon">
                        <div class="logo-icon">
                            <img src="~/images/logo.png" alt="RX MEDO CARD Logo" class="logo-image">
                        </div>
                        <div class="logo-text-wrapper">
                            <div class="logo-text">RX MEDO CARD</div>
                            <div class="logo-subtitle">AN INITIATIVE OF RX MEDICAL TRUST</div>
                        </div>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
                    style="display: block; visibility: visible; opacity: 1; position: absolute; right: 15px; top: 50%; transform: translateY(-50%); z-index: 1050; background-color: rgba(239, 71, 111, 0.3); padding: 0.7rem; border-radius: 8px; margin-left: auto; width: auto; height: auto; cursor: pointer; pointer-events: auto; overflow: visible; border: none; outline: none; box-shadow: none;">
                    <div class="hamburger-icon" style="width: 30px; height: 22px; position: relative; display: flex; flex-direction: column; justify-content: space-between; visibility: visible; opacity: 1;">
                        <span style="display: block; width: 100%; height: 3px; background-color: #ef476f; border-radius: 3px; transition: all 0.3s ease; visibility: visible; opacity: 1;"></span>
                        <span style="display: block; width: 100%; height: 3px; background-color: #ef476f; border-radius: 3px; transition: all 0.3s ease; visibility: visible; opacity: 1;"></span>
                        <span style="display: block; width: 100%; height: 3px; background-color: #ef476f; border-radius: 3px; transition: all 0.3s ease; visibility: visible; opacity: 1;"></span>
                    </div>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <span class="nav-icon"><i class="bi bi-house"></i></span>
                                <span class="nav-text">Home</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Offers" asp-action="Index">
                                <span class="nav-icon"><i class="bi bi-gift"></i></span>
                                <span class="nav-text">Offers</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Hospitals" asp-action="Index">
                                <span class="nav-icon"><i class="bi bi-hospital"></i></span>
                                <span class="nav-text">Hospitals</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OPD" asp-action="Index">
                                <span class="nav-icon"><i class="bi bi-clipboard2-pulse"></i></span>
                                <span class="nav-text">OPD</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pharmacy" asp-action="Index">
                                <span class="nav-icon"><i class="bi bi-capsule"></i></span>
                                <span class="nav-text">Pharmacy</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Diagnostics" asp-action="Index">
                                <span class="nav-icon"><i class="bi bi-file-medical"></i></span>
                                <span class="nav-text">Diagnostics</span>
                            </a>
                        </li
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Login">
                                <span class="nav-icon"><i class="bi bi-shield-lock"></i></span>
                                <span class="nav-text">Admin</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link get-started-btn" asp-controller="Membership" asp-action="Index">
                                <span class="nav-text">Get Started</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-modern py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <div class="footer-logo">
                        <div class="footer-logo-with-icon">
                            <div class="footer-logo-icon">
                                <img src="~/images/logo.png" alt="RX MEDO CARD Logo" class="footer-logo-image">
                            </div>
                            <div class="footer-logo-text-wrapper">
                                <div class="footer-logo-text">RX MEDO CARD</div>
                                <div class="footer-logo-subtitle">AN INITIATIVE OF RX MEDICAL TRUST</div>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3" style="color: #f8f8f8;">
                        RX MEDO CARD is a healthcare discount program designed to make quality healthcare accessible and
                        affordable for everyone.
                    </p>
                    <div class="tagline-footer" style="color: #f8f8f8;">
                        Your Health, Our Priority
                    </div>
                    <div class="mt-3">
                        <a class="get-started-btn" asp-controller="Membership" asp-action="Index">
                            Get Started
                        </a>
                    </div>

                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Offers" asp-action="Index">Offers</a></li>
                        <li><a asp-controller="Hospitals" asp-action="Index">Hospitals</a></li>
                        <li><a asp-controller="OPD" asp-action="Index">OPD</a></li>
                        <li><a asp-controller="Pharmacy" asp-action="Index">Pharmacy</a></li>
                        <li><a asp-controller="Diagnostics" asp-action="Index">Diagnostics</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-4 mb-4 mb-md-0">
                    <h5>Our Services</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Family Physician</a></li>
                        <li><a href="#">Specialist Consultations</a></li>
                        <li><a href="#">Diagnostic Tests</a></li>

                        <li><a href="#">Hospital Packages</a></li>
                        <li><a href="#">Senior Care</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-4">
                    <h5>Contact Us</h5>
                    <ul class="list-unstyled">
                        <li><a href="tel:+919876543210"><i class="bi bi-telephone me-2"></i> +91 9876 543 210</a></li>
                        <li><a href="mailto:info@rxmedocard.com"><i class="bi bi-envelope me-2"></i>
                                info@rxmedocard.com</a></li>
                        <li><a href="#"><i class="bi bi-geo-alt me-2"></i> 123 Healthcare Avenue, Delhi, India</a></li>
                    </ul>
                    <div class="mt-3">
                        <a href="#" class="text-white me-3"><i class="bi bi-facebook fs-5"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-twitter fs-5"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-instagram fs-5"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-linkedin fs-5"></i></a>
                    </div>
                </div>
            </div>
            <hr class="mt-4 mb-3">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p style="color: #f8f8f8; margin-bottom: 0;">&copy; @DateTime.Now.Year - RX MEDO CARD. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" style="color: #f8f8f8;" class="me-3">Privacy Policy</a>
                    <a href="#" style="color: #f8f8f8;" class="me-3">Terms of Service</a>
                    <a href="#" style="color: #f8f8f8;">Sitemap</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navbar-active.js" asp-append-version="true"></script>
    <script src="~/js/navbar-fix.js" asp-append-version="true"></script>
    <script src="~/js/toggle-button-fix.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            mirror: false
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
