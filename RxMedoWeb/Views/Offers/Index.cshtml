@{
    ViewData["Title"] = "Offers";
}

<link rel="stylesheet" href="~/css/offers.css" />

<!-- Hero Section -->
<div class="offers-hero text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">Healthcare Offers Just For You</h1>
                <p class="hero-subtitle">Choose from our exclusive membership plans and start saving on healthcare services today.</p>
                <div class="hero-buttons">
                    <a href="#membership-plans" class="btn btn-primary btn-lg me-3">VIEW PLANS</a>
                    <a href="#how-to-avail" class="btn btn-outline-light btn-lg">LEARN MORE</a>
                </div>
            </div>
            <div class="col-lg-6 mt-5 mt-lg-0">
                <img src="~/images/medical-services.svg" alt="Medical Services" class="img-fluid hero-image">
            </div>
        </div>
    </div>
</div>

<!-- Membership Plans Section -->
<section id="membership-plans" class="membership-plans">
    <div class="container">
        <h2 class="text-center mb-5">Choose Your Plan</h2>
        <div class="row">
            <!-- Basic Plan -->
            <div class="col-lg-4 mb-4">
                <div class="plan-card">
                    <h3>Medocards</h3>
                    <div class="plan-price">₹3000<small>/yr</small></div>
                    <ul class="plan-features">
                        <li>30% Off on OPD</li>
                        <li>20% Off on Medical</li>
                        <li>30% Off on Diagnostics</li>
                        <li>30% savings</li>
                    </ul>
                    <a href="#" class="btn btn-outline-primary w-100">Get Started</a>
                </div>
            </div>
            
            <!-- Featured Plan -->
            <div class="col-lg-4 mb-4">
                <div class="plan-card featured">
                    <h3>MedoInsurance Cards</h3>
                    <div class="plan-price">₹5000<small>/yr</small></div>
                    <ul class="plan-features">
                        <li>All Medocards benefits</li>
                        <li>Additional insurance coverage</li>
                        <li>30% savings</li>
                        <li>Priority Support</li>
                    </ul>
                    <a href="#" class="btn btn-primary w-100">Get Started</a>
                </div>
            </div>
            
            <!-- Premium Plan -->
            <div class="col-lg-4 mb-4">
                <div class="plan-card">
                    <h3>Insurance Cards</h3>
                    <div class="plan-price">₹3000<small>/yr</small></div>
                    <ul class="plan-features">
                        <li>No medocards facility</li>
                        <li>5 Lakh medical coverage</li>
                        <li>29% savings</li>
                        <li>Basic Support</li>
                    </ul>
                    <a href="#" class="btn btn-outline-primary w-100">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How to Avail Section -->
<section id="how-to-avail" class="how-to-avail">
    <div class="container">
        <h2 class="text-center mb-5">How to Avail</h2>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="step-card">
                    <div class="step-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <h4>Sign Up</h4>
                    <p>Create your account with basic details</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="step-card">
                    <div class="step-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h4>Choose Plan</h4>
                    <p>Select the plan that suits your needs</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="step-card">
                    <div class="step-icon">
                        <i class="fas fa-id-card"></i>
                    </div>
                    <h4>Get Card</h4>
                    <p>Receive your digital membership card</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="step-card">
                    <div class="step-icon">
                        <i class="fas fa-piggy-bank"></i>
                    </div>
                    <h4>Start Saving</h4>
                    <p>Begin saving on healthcare services</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Medical Services Section -->
<section class="medical-services">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="~/images/medical-illustration.svg" alt="Medical Services" class="img-fluid">
            </div>
            <div class="col-lg-6">
                <h2 class="mb-4">Our Medical Services</h2>
                <div class="service-grid">
                    <div class="service-item">
                        <i class="fas fa-ambulance service-icon"></i>
                        <p>Ambulance</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-heartbeat service-icon"></i>
                        <p>Cardiology</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-procedures service-icon"></i>
                        <p>Daycare</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-notes-medical service-icon"></i>
                        <p>Diagnostics</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-pills service-icon"></i>
                        <p>Pharmacy</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-user-md service-icon"></i>
                        <p>Specialists</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
}
