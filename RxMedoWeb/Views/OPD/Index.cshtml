<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<!-- Custom CSS -->
<link rel="stylesheet" href="~/css/opd.css?v=1.2" />

<!-- Hero Section -->
<div class="opd-hero text-white py-5" style="margin-top: 0; padding-top: 80px;">
    <div class="container px-4">
        <div class="row align-items-center g-4">
            <div class="col-lg-6 col-md-6 text-md-start text-center d-flex flex-column justify-content-center">
                <h1 class="hero-title animate__animated animate__fadeInDown">OPD Services <br><span class="text-accent">For Your Health</span></h1>
                <p class="hero-subtitle animate__animated animate__fadeInUp">Experience quality healthcare with our comprehensive outpatient department services designed to meet all your medical needs.</p>
                <div class="mt-4 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                    <a href="#services" class="btn btn-accent me-md-3">OUR SERVICES</a>
                    <a asp-controller="Offers" asp-action="Index" class="btn btn-accent me-md-3">VIEW OFFERS</a>
                    <a href="#departments" class="btn btn-outline-light">DEPARTMENTS</a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 text-center animate__animated animate__fadeInRight">
                <div class="hero-image-container">
                    <img src="~/images/opd-bg.png" alt="OPD Services" class="img-fluid hero-image">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About OPD Section -->
<div class="about-section" id="about">
    <div class="container px-4">
        <h2 class="section-title animate__animated animate__fadeIn">About Our OPD</h2>
        <p class="section-subtitle animate__animated animate__fadeIn">Providing comprehensive outpatient care with a focus on patient comfort and convenience</p>

        <div class="row align-items-center g-4">
            <div class="col-lg-6 animate__animated animate__fadeInLeft">
                <div class="about-content">
                    <h3 class="about-title">Outpatient Department</h3>
                    <h4 class="about-subtitle">Quality Care Without Hospitalization</h4>
                    <p class="about-text">Our Outpatient Department (OPD) offers comprehensive medical services without the need for hospital admission. We provide consultations, diagnostics, and treatments for a wide range of health conditions in a comfortable and convenient environment.</p>
                    <p class="about-text">With state-of-the-art facilities and a team of experienced healthcare professionals, we ensure that you receive the highest quality of care. Our patient-centered approach focuses on your comfort, convenience, and quick recovery.</p>
                    <div class="d-flex justify-content-center">
                        <a href="#services" class="btn btn-primary">EXPLORE SERVICES</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 animate__animated animate__fadeInRight">
                <div class="about-image">
                    <img src="~/images/opd1.jpeg" alt="About OPD" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Services Section -->
<div class="services-section" id="services">
    <div class="container px-4">
        <h2 class="section-title animate__animated animate__fadeIn">Our OPD Services</h2>
        <p class="section-subtitle animate__animated animate__fadeIn">Comprehensive healthcare services to address all your medical needs</p>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fa-solid fa-user-doctor"></i>
                    </div>
                    <h3 class="service-title">Family Physician</h3>
                    <p class="service-description">Personalized health solutions from our in-house Family Physicians for you & your family anytime anywhere.</p>
                    <a href="#" class="btn btn-primary">BOOK APPOINTMENT</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fa-solid fa-stethoscope"></i>
                    </div>
                    <h3 class="service-title">Specialist Consultation</h3>
                    <p class="service-description">Schedule an appointment with our top specialists for specific health concerns and expert medical advice.</p>
                    <a href="#" class="btn btn-primary">BOOK APPOINTMENT</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fa-solid fa-vial"></i>
                    </div>
                    <h3 class="service-title">Diagnostic Services</h3>
                    <p class="service-description">Comprehensive diagnostic tests and screenings to identify health issues and guide treatment plans.</p>
                    <a href="#" class="btn btn-primary">LEARN MORE</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.4s;">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fa-solid fa-heart-pulse"></i>
                    </div>
                    <h3 class="service-title">Preventive Care</h3>
                    <p class="service-description">Regular check-ups and screenings to prevent health issues and maintain optimal wellness.</p>
                    <a href="#" class="btn btn-primary">LEARN MORE</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.5s;">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fa-solid fa-hospital-user"></i>
                    </div>
                    <h3 class="service-title">Follow-up Care</h3>
                    <p class="service-description">Continuous monitoring and care to ensure complete recovery and optimal health outcomes.</p>
                    <a href="#" class="btn btn-primary">LEARN MORE</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.6s;">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fa-solid fa-stethoscope"></i>
                    </div>
                    <h3 class="service-title">Specialist Consultation</h3>
                    <p class="service-description">Expert consultation with specialized doctors for specific medical conditions.</p>
                    <a href="#" class="btn btn-primary">LEARN MORE</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="steps-section">
    <div class="container px-4">
        <h2 class="section-title animate__animated animate__fadeIn">How It Works</h2>
        <p class="section-subtitle animate__animated animate__fadeIn">Simple steps to access our OPD services</p>

        <div class="row g-4">
            <div class="col-lg-3 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <h3 class="step-title">Book Appointment</h3>
                    <p class="step-description">Schedule an appointment online or by phone with your preferred doctor or specialist.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                <div class="step-card">
                    <div class="step-number">2</div>
                    <h3 class="step-title">Visit OPD</h3>
                    <p class="step-description">Arrive at our facility at your scheduled time and complete a brief registration process.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
                <div class="step-card">
                    <div class="step-number">3</div>
                    <h3 class="step-title">Consultation</h3>
                    <p class="step-description">Meet with your doctor for a thorough examination and personalized treatment plan.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.4s;">
                <div class="step-card">
                    <div class="step-number">4</div>
                    <h3 class="step-title">Follow-up</h3>
                    <p class="step-description">Receive ongoing care and follow-up appointments as needed for your complete recovery.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Departments Section -->
<div class="departments-section" id="departments">
    <div class="container px-4">
        <h2 class="section-title animate__animated animate__fadeIn">Our Departments</h2>
        <p class="section-subtitle animate__animated animate__fadeIn">Specialized care across multiple medical disciplines</p>

        <div class="row">
            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
                <div class="department-item">
                    <i class="fa-solid fa-heart"></i> Cardiology
                </div>
                <div class="department-item">
                    <i class="fa-solid fa-tooth"></i> Dentistry
                </div>
                <div class="department-item">
                    <i class="fa-solid fa-brain"></i> Neurology
                </div>
                <div class="department-item">
                    <i class="fa-solid fa-lungs"></i> Pulmonology
                </div>
            </div>

            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                <div class="department-item">
                    <i class="fa-solid fa-eye"></i> Ophthalmology
                </div>
                <div class="department-item">
                    <i class="fa-solid fa-bone"></i> Orthopedics
                </div>
                <div class="department-item">
                    <i class="fa-solid fa-child"></i> Pediatrics
                </div>
                <div class="department-item">
                    <i class="fa-solid fa-venus"></i> Gynecology
                </div>
            </div>

            <div class="col-lg-4 col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
                <div class="department-item">
                    <i class="fa-solid fa-ear-listen"></i> ENT
                </div>
                <div class="department-item">
                    <i class="fa-solid fa-stomach"></i> Gastroenterology
                </div>
                <div class="department-item">
                    <i class="fa-solid fa-hand-dots"></i> Dermatology
                </div>
                <div class="department-item">
                    <i class="fa-solid fa-kidneys"></i> Nephrology
                </div>
            </div>
        </div>
    </div>
</div>

