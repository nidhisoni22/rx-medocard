@section Scripts {
    <script>
        // Scroll animation for sections
        document.addEventListener('DOMContentLoaded', function() {
            // Initial check on page load
            checkVisibility();

            // Check on scroll
            window.addEventListener('scroll', function() {
                checkVisibility();
            });

            function checkVisibility() {
                // Handle fade-up elements
                const fadeElements = document.querySelectorAll('.fade-up');
                fadeElements.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        element.classList.add('active');
                    }
                });

                // Handle slide-in elements
                const slideElements = document.querySelectorAll('.slide-in-left, .slide-in-right');
                slideElements.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        element.classList.add('active');
                    }
                });

                // Handle fade-in-up elements
                const fadeInUpElements = document.querySelectorAll('.fade-in-up');
                fadeInUpElements.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        element.classList.add('active');
                    }
                });

                // Handle trust program cards
                const trustProgramElements = document.querySelectorAll('.trust-program-card, .fade-in, .fade-in-up, .slide-in-left, .slide-in-right');
                trustProgramElements.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        element.classList.add('active');
                    }
                });

                // Handle feature items
                const featureItems = document.querySelectorAll('.feature-item');
                featureItems.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        element.classList.add('active');
                    }
                });

                // Handle about section elements
                const aboutElements = document.querySelectorAll('.animate-on-scroll');
                aboutElements.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;
                    const delay = element.getAttribute('data-delay') || 0;

                    if (elementTop < windowHeight - 100) {
                        setTimeout(() => {
                            element.classList.add('active');
                        }, delay * 1000);
                    }
                });

                // Handle count-up animations
                const countElements = document.querySelectorAll('.count-up');
                countElements.forEach(function(element) {
                    if (element.classList.contains('counted')) return;

                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        const target = parseInt(element.getAttribute('data-count'));
                        const duration = 2000; // 2 seconds
                        const increment = target / (duration / 16); // 60fps
                        let current = 0;

                        element.classList.add('counted');

                        const timer = setInterval(() => {
                            current += increment;
                            if (current >= target) {
                                element.textContent = target.toLocaleString();
                                clearInterval(timer);
                            } else {
                                element.textContent = Math.floor(current).toLocaleString();
                            }
                        }, 16);
                    }
                });

                // Handle service plans benefits
                const servicePlansBenefits = document.querySelectorAll('.service-plans-benefits li');
                servicePlansBenefits.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        element.classList.add('active');
                    }
                });

                // Handle service plans CTA button
                const servicePlansCta = document.querySelector('.service-plans-cta-button');
                if (servicePlansCta) {
                    const elementTop = servicePlansCta.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        servicePlansCta.classList.add('active');
                    }
                }

                // Handle hospitals section elements
                const hospitalsElements = document.querySelectorAll('.hospitals-content-v2, .animate-title, .animate-line, .animate-text, .animate-item, .animate-btn');
                hospitalsElements.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        element.classList.add('active');
                    }
                });

                // Handle hero corner images
                const heroCornerImages = document.querySelectorAll('.hero-corner-image, .fade-in-hero');
                heroCornerImages.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementTop < windowHeight - 100) {
                        element.classList.add('active');
                    }
                });
            }
        });
    </script>
}
