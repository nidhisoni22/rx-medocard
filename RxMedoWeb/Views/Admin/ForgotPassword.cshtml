@model RxMedoWeb.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AdminLayout";
}

<div class="login-card">
    <div class="login-header">
        <img src="~/images/logo.png" alt="RX MEDO CARD Logo" class="login-logo">
        <h2 class="login-title">RX MEDO CARD</h2>
        <p class="login-subtitle">Reset Admin Password</p>
    </div>
    <div class="login-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mb-4 rounded-3">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mb-4 rounded-3">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            </div>
        }

        <form asp-action="ForgotPassword" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 alert alert-danger p-3 rounded-3"></div>

            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label fw-medium">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Email" class="text-danger mt-1 d-block"></span>
            </div>

            <button type="submit" class="btn btn-login w-100">
                <i class="bi bi-envelope me-2"></i> Send Reset Link
            </button>

            <div class="mt-4 text-center">
                <a asp-action="Login" class="back-to-login-link">
                    <i class="bi bi-arrow-left me-1"></i> Back to Login
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .login-container {
        padding: 1rem;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
    }

    .login-header {
        padding: 2.5rem 2rem;
    }

    .login-logo {
        width: 70px;
        height: 70px;
        margin-bottom: 1.25rem;
    }

    .login-title {
        font-size: 1.75rem;
        margin-bottom: 0.75rem;
    }

    .login-form {
        padding: 2.5rem;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
        padding-left: 1rem;
        padding-right: 1rem;
    }

    .form-control {
        border-left: none;
        padding-left: 0;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #ced4da;
    }

    .form-control-lg {
        height: calc(1.5em + 1rem + 2px);
    }

    .btn-login {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .back-to-login-link {
        color: #1A237E;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .back-to-login-link:hover {
        color: #303F9F;
        text-decoration: underline;
    }

    .alert {
        border-radius: 8px;
        padding: 1rem;
    }

    .alert-success {
        background-color: rgba(76, 175, 80, 0.1);
        color: #2e7d32;
        border: none;
    }

    .alert-danger {
        background-color: rgba(244, 67, 54, 0.1);
        color: #d32f2f;
        border: none;
    }

    @@media (max-width: 576px) {
        .login-card {
            border-radius: 12px;
        }

        .login-header {
            padding: 2rem 1.5rem;
        }

        .login-logo {
            width: 60px;
            height: 60px;
            margin-bottom: 1rem;
        }

        .login-title {
            font-size: 1.5rem;
        }

        .login-form {
            padding: 1.5rem;
        }

        .form-control-lg {
            height: calc(1.5em + 0.75rem + 2px);
            font-size: 1rem;
        }

        .btn-login {
            padding: 0.6rem 1.25rem;
            font-size: 1rem;
        }
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
